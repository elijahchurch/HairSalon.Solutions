@{
    Layout = "_Layout";
}

@using HairSalon.Models;
@* Model is list of stylists from database *@

<h1>Eau Claire's Salon Stylists</h1>
<hr />

@if (@Model.Count == 0)
{
    <h3>No stylists have been added to Eau Claire's database.</h3>
}

<ul>
@foreach (Stylist stylist in Model)
{
    <li>@Html.ActionLink($"{stylist.First_Name} {stylist.Last_Name}", "Details", new {id = stylist.StylistId})</li>
}
</ul>

<p>@Html.ActionLink("Add a Stylist", "Create")</p>


