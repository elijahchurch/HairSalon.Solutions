@{
    Layout = "_Layout";
}

@model HairSalon.Models.Stylist
@using HairSalon.Models

<h2>@Html.DisplayFor(model => model.First_Name) @Html.DisplayFor(model => model.Last_Name) Stylist Details</h2>
<hr />
<h4>Styling Specialities: @Html.DisplayFor(model => model.Specialty)</h4>

<h4>Current Clients:</h4>
@if (Model.Clients.Count == 0)
{
    <p>@Html.DisplayFor(model => model.First_Name) @Html.DisplayFor(model => model.Last_Name) currrently has no clients.</p>
}
else
{
        @foreach (Client client in Model.Clients)
        {
            <h5>@Html.ActionLink($"{client.First_Name} {client.Last_Name}", "Details", "Clients", new {id = client.ClientId})</h5>
        }
}
<hr />
<p>@Html.ActionLink("Add a Client", "Create", "Clients")</p>
<p>@Html.ActionLink("Update Information", "Edit", new {id = Model.StylistId})</p>
<p>@Html.ActionLink("Delete this Stylist", "Delete", new {id = Model.StylistId})</p>
<p>@Html.ActionLink("Back", "Index")</p>